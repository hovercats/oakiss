#!/bin/sh -e

# vendor libwm, as its not needed elsewhere at all
(
cd libwm

make \
	CFLAGS="$CFLAGS -I/. -I/pkg/include" \
	LDFLAGS="$LDFLAGS -L/. -L/pkg/lib"

)

# change bordercolor
sed 's/deadca7/836421/' config.def.h > _
mv _ config.def.h

export CFLAGS="$CFLAGS -I/. -I/pkg/include"
export LDFLAGS="$LDFLAGS -L/. -L/pkg/lib"

make
make DESTDIR="$1" PREFIX=/pkg install

# Makefile doesnt install manpages
mkdir -p     "$1/pkg/share/man/man1"
cp glazier.1 "$1/pkg/share/man/man1"

# Compress manpages
find "$1/pkg/share/man" -type f | xargs gzip -n -9
