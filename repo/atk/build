#!/bin/sh -e

export DESTDIR="$1"

patch -p1 < 0001-fix-enum-types-for-muon.patch

: > tests/meson.build
: > po/meson.build

meson setup \
    -Dprefix=/usr \
    -Dsysconfdir=/etc \
    -Dmandir=/usr/share/man \
    -Ddocs=false \
    -Dintrospection=false \
    build

samu -C build
samu -C build install
