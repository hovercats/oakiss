#!/bin/sh -e

export DESTDIR="$1"

muon setup \
    -Dprefix=/usr \
    -Dx11=enabled \
    -Dmanpage-build=disabled \
    -Degl=disabled \
    -Degl-x11=disabled \
    -Dgl=disabled \
    -Ddrm=enabled \
    -Dgbm=disabled \
    -Db_colorout=never \
    -Dpkg_config_path=/usr/lib/pkgconfig \
    build

samu -C build
muon -C build install

# we probably dont need these
rm -rf \
    "$1/usr/share/zsh" \
    "$1/usr/share/bash-completion" \
    "$1/usr/share/icons"
