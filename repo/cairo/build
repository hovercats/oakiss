#!/bin/sh -e

patch -p1 < 0001-util-remove-malloc-stats.patch

export DESTDIR="$1"

meson setup \
	-Dprefix=/usr \
	-Dbuildtype=release \
	-Db_colorout=never \
	-Ddebug=false \
	-Doptimization=s \
	-Dtee=enabled \
	-Dxcb=enabled \
	-Dxlib=enabled \
	-Dxlib-xcb=enabled \
	-Dtests=disabled \
	build

samu -C build
samu -C build install
