#!/bin/sh -e

export CFLAGS="$CFLAGS -DNO_BZIP_SUPPORT"

for p in *.patch; do
    patch -p1 < "$p"
done

make \
    prefix=/pkg \
    CC="$CC -static $LDFLAGS $CFLAGS $CXXFLAGS" \
    -f unix/Makefile generic

make \
    prefix="$1/" \
    MANDIR="$1/pkg/share/man/man1" \
    -f unix/Makefile install

# Compress manpages
find "$1/pkg/share/man" -type f | xargs gzip -n -9
