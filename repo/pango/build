#!/bin/sh -e

export DESTDIR="$1"

for p in *.patch; do
	patch -p1 < "$p"
done

# Disable download of missing (optional) dependencies
# during the build. This cannot be turned off otherwise.
rm -rf subprojects

: > tests/meson.build
: > examples/meson.build
: > docs/meson.build

muon setup \
	-Dprefix=/usr \
	-Dlibdir=/usr/lib \
	-Dbuildtype=release \
	-Db_colorout=never \
	-Ddebug=false \
	-Doptimization=s \
	-Dgtk_doc=false \
	-Dintrospection=disabled \
	-Dpkg_config_path=/usr/lib/pkgconfig \
	-Ddefault_library=shared \
	build

samu -C build
muon -C build install
