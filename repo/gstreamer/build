#!/bin/sh -e

export DESTDIR="$1"

patch -p1 < 0001-fix-incompatability-with-byacc.patch

meson setup \
    -Dprefix=/usr \
    -Dlibexecdir=/usr/lib \
    -Dbuildtype=release \
    -Ddbghelp=disabled \
    -Dintrospection=disabled \
    -Dexamples=disabled \
    -Ddoc=disabled \
    -Db_colorout=never \
    -Dtests=disabled \
    output

samu -C output
samu -C output install
