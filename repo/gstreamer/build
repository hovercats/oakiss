#!/bin/sh -e

export DESTDIR="$1"

# Avoid the need for bison
patch -p1 < byacc.patch
sed '/^args/{s/yfile,//;s/cfile/cfile, yfile/;}' gst/parse/gen_grammar.py.in > _
mv -f _ gst/parse/gen_grammar.py.in

meson setup \
    -Dprefix=/usr \
    -Dlibexecdir=/usr/lib \
    -Dbuildtype=release \
    -Ddbghelp=disabled \
    -Dintrospection=disabled \
    -Dexamples=disabled \
    -Ddoc=disabled \
    -Db_colorout=never \
    -Dtests=disabled \
    output

samu -C output
samu -C output install
