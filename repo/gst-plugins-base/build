#!/bin/sh -e

export DESTDIR="$1"

meson setup \
    -Dprefix=/usr \
	-Dbuildtype=release \
	-Db_colorout=never \
	-Ddebug=false \
	-Doptimization=s \
    -Dgl=disabled \
    -Dtests=disabled \
    -Dtremor=disabled \
    -Dexamples=disabled \
    -Dcdparanoia=disabled \
    -Dintrospection=disabled \
    -Dnls=disabled \
    -Ddoc=disabled \
    -Dalsa=enabled \
    build

samu -C build
samu -C build install

# Compress manpages
find "$1/usr/share/man" -type f -exec gzip -n -9 {} +
